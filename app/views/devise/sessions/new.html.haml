%h2 Zaloguj

.login-form
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-inline'}) do |f|
    .form-group
      = f.text_field :login, placeholder: 'Login', :autofocus => true, class: 'form-control'

    .form-group
      = f.password_field :password, placeholder: 'Has≈Ço', class: 'form-control'

    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me

    .btn-group
      = f.submit 'Zaloguj', class: 'btn btn-primary'
      = link_to 'Zarejestruj', new_registration_path(resource_name), class: 'btn btn-default'
