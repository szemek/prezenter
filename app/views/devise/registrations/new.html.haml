%h2 Zarejestruj

.signup-form
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-inline'}) do |f|
    .form-group
      = f.text_field :login, placeholder: 'Login', :autofocus => true, class: 'form-control'

    .form-group
      = f.password_field :password, placeholder: 'Hasło', class: 'form-control'

    .form-group
      = f.password_field :password_confirmation, placeholder: 'Potwierdzenie hasła', class: 'form-control'

    .btn-group
      = f.submit 'Zarejestruj', class: 'btn btn-primary'
      = link_to 'Zaloguj', new_session_path(resource_name), class: 'btn btn-default'
