- if controller_name != 'sessions'
  .action
    = button_to "Zaloguj", new_session_path(resource_name), class: 'btn btn-default'

- if devise_mapping.registerable? && controller_name != 'registrations'
  .action
    = button_to "Zarejestruj", new_registration_path(resource_name), class: 'btn btn-default'
