#wrapper
  #content
    %h1= @presentation.name
    %form{action: "/presentation/#{@presentation.id}/update", method: "post"}
      .tabs
        %a.active{href: "#haml"} Haml
        %a{href: "#css"} CSS
      .areas
        %textarea#haml.active{name: "haml"}= @presentation.haml
        %textarea#css.hidden{name: "css"}= @presentation.css
      .button-group
        %input.button{type: "submit", value: "Update"}
        = link_to 'Back to list', root_path, :class => 'button secondary'
